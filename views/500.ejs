<%- include('includes/header') %>
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex flex-col items-center justify-center px-4">
  <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 text-center" style="height: 500px; margin-top: 122px;">
    <!-- Error Icon -->
    <div class="mb-6">
      <i class="fas fa-cogs text-yellow-500 text-6xl"></i>
    </div>

    <!-- Error Content -->
    <h1 class="text-4xl font-bold text-gray-800 mb-4">500</h1>
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Internal Server Error</h2>
    <% if (typeof error !== "undefined" && error) { %>
    <p class="text-gray-600 mb-8">
      <%= error %>
    </p>
    <% } else { %>
    <p class="text-gray-600 mb-8">Sorry! Something went wrong on our end. Our team has been notified and is working to fix the issue.</p>
    <% } %>
    
    <a href="/" class="bg-blue-600 text-black px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" style="color: #FD5D14;">
      <i class="fas fa-home mr-2">

    </i><b>Go Home</b>
  </a>
  <br>
  <br>

    <p class="text-sm text-gray-500 mb-8">Error ID: <%= Date.now().toString(36) %></p>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      
    
      <a href="/contact" style="color: #FD5D14;"  class="bg-green-600  px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
        <i class="fas fa-envelope mr-2"></i>Contact Support
      </a>
      <br>
      <br>
      
    </div>

    <!-- Refresh Timer -->
    <div class="mt-8 text-sm text-gray-500">
      <p>This page will refresh in <span id="countdown">30</span> seconds</p>
    </div>
    <button onclick="history.back()" style="color: #FD5D14;" class="bg-gray-600  px-6 py-2 rounded-lg hover:bg-gray-700 transition-colors">
      <i class="fas fa-arrow-left mr-2"></i>Go Back
    </button>
  </div>
</div>

<script>
  let timeLeft = 30;
  const countdownElement = document.getElementById('countdown');

  const countdown = setInterval(() => {
    timeLeft--;
    countdownElement.textContent = timeLeft;

    if (timeLeft <= 0) {
      clearInterval(countdown);
      location.reload();
    }
  }, 1000);
</script>
<%- include('includes/footer') %>