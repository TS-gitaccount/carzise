<%- include('includes/header') %>
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex flex-col items-center justify-center px-4">
  <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8 text-center" style="height: 500px; margin-top: 122px;">
    <!-- Error Icon -->
    <div class="mb-6">
      <i class="fas fa-exclamation-circle text-red-500 text-6xl"></i>
    </div>

    <!-- Error Content -->
    <h1 class="text-4xl font-bold text-gray-800 mb-4">400</h1>
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Bad Request</h2>
    <% if (typeof error !=="undefined" && error) { %>
    <p class="text-gray-600 mb-8">
      <%= error %>
    </p>
    <% } else { %>
    <p class="text-gray-600 mb-8">Oops! The server could not understand your request. Please check your input and try again. </p>
    <a href="/" class="bg-blue-600 text-black px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" style="color: #FD5D14;">
      <i class="fas fa-home mr-2">

    </i><b>Go Home</b>
  </a>
    <% } %>


    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      
      <button onclick="history.back()" style="color: #FD5D14;" class="bg-gray-600 px-6 py-2 rounded-lg hover:bg-gray-700 transition-colors" >
        <i class="fas fa-arrow-left mr-2"></i><b>Go Back</b>
      </button>
    </div>
  </div>
</div>
<%- include('includes/footer') %>